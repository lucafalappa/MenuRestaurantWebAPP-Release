@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .error-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .error-content {
            text-align: center;
        }

        .error-heading {
            font-size: 4rem;
            color: #dc3545;
        }

        .error-message {
            font-size: 1.5rem;
            margin-top: 20px;
        }

        .error-back-btn {
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <div class="error-container">
        <div class="error-content">
            <h1 class="error-heading">ERRORE</h1>
            <p class="error-message">Qualcosa è andato storto.</p>
            <a href="/" class="btn btn-outline-primary error-back-btn">Torna alla Home</a>
        </div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
