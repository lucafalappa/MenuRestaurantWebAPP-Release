@model MenuRestaurantWebAPP.MVC.PortataViewModels.PortataGetPortataViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Portata Cercata";
}

<html>
<body>
    <h2></h2>
    <div class="container">
        <div class="table-responsive">
            <h2>Risultati della ricerca</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-center">Nome</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var portata in Model.Portate)
                    {
                        <tr>
                            <td class="text-center">@portata.Tipologia</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
