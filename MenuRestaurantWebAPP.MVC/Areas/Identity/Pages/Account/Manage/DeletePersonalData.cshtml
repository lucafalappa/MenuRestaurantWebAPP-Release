@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Elimina account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container">

    <h3 class="text-center mb-4">@ViewData["Title"]</h3>
    <div class="alert alert-warning" role="alert">
        
        <p>
            <strong>Eliminando i tuoi dati, il tuo account verrà cancellato per sempre. Tale azione è irreversibile.</strong>
        </p>
    </div>

    <div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Inserisci la tua password." />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger mb-2"></span>
                </div>
            }
            <button class="w-100 btn btn-lg btn-outline-danger mb-2" type="submit">Elimina i miei dati e cancella l'account</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
