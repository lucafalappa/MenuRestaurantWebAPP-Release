@page
@model IndexModel
@{
    ViewData["Title"] = "Profilo";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Qui ho aggiunto la classe offset -->
            <h3 class="text-center mb-4">@ViewData["Title"]</h3>
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label"></label>
                    <span class="text-success">Username attuale</span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-outline-primary mb-2">Salva</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
