@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Modifica password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Aggiunto offset-md-3 qui -->
            <h3 class="text-center mb-4">@ViewData["Title"]</h3>
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Inserisci la password attuale." />
                    <label asp-for="Input.OldPassword" class="form-label"></label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger mb-2"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Inserisci la nuova password." />
                    <label asp-for="Input.NewPassword" class="form-label"></label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger mb-2"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Conferma la nuova password." />
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger mb-2"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-outline-primary mb-2">Aggiorna password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
